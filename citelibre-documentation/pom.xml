<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>org.citelibre</groupId>
    <version>2.0.0-SNAPSHOT</version>
    <artifactId>citelibre-documentation</artifactId>
    <name>CiteLibre :: Documentation</name>
    <packaging>jar</packaging>

    <properties>
        <yupiik-tools.version>1.2.12</yupiik-tools.version>
    </properties>

    <build>
        <plugins>
            <plugin>
                <!-- mvn process-classes yupiik-tools:serve-minisite -e [-Dyupiik.minisite.openBrowser=false] -->
                <groupId>io.yupiik.maven</groupId>
                <artifactId>yupiik-tools-maven-plugin</artifactId>
                <version>${yupiik-tools.version}</version>
                <configuration>
                    <source>${project.basedir}/minisite</source>
                    <siteBase>${project.organization.url}</siteBase>
                    <logoText>CiteLibre</logoText>
                    <logoSideText>documentation</logoSideText>
                    <logo>/images/citelibre-logo.svg</logo>
                    <indexText>CiteLibre</indexText>
                    <indexSubTitle>The all-in-one services platform for public organization.</indexSubTitle>
                    <preferYupiikAsciidoc>true</preferYupiikAsciidoc>
                    <customHead>
                        &lt;link rel="stylesheet" href="{{base}}/css/citelibre.css?v=${project.version}"&gt;
                    </customHead>
                    <templateExtensionPoints>
                        <socialLinks>
                            &lt;li class="list-inline-item"&gt;&lt;a title="Github" target="_blank" href="https://github.com/citelibreorg/packaging"&gt;&lt;i class="fab fa-github fa-fw"&gt;&lt;/i&gt;&lt;/a&gt;&lt;/li&gt;
                        </socialLinks>
                        <copyrightLine>
                            &lt;small class="copyright">Â© 2025 &lt;strong&gt;CiteLibre&lt;/strong&gt;. All Rights Reserved&lt;/small&gt;
                        </copyrightLine>
                    </templateExtensionPoints>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>io.yupiik.maven</groupId>
                        <artifactId>asciidoc-java</artifactId>
                        <version>${yupiik-tools.version}</version>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
    </build>
</project>
