{
  "apiVersion": "apps/v1",
  "kind": "Deployment",
  "metadata": {
    "name": "{{bundlebee-lowercase:{{application.name}}}}",
    "namespace": "{{namespace.name}}",
    "labels": {
      "app.kubernetes.io/name": "{{bundlebee-lowercase:{{application.name}}}}",
      "app.kubernetes.io/instance": "{{application.name}}",
      "app.kubernetes.io/version": "{{application.image.version}}",
      "app.kubernetes.io/component": "{{application.component}}",
      "app.kubernetes.io/part-of": "{{project.name}}",
      "app.kubernetes.io/managed-by": "bundlebee",
      "deploy.by": "{{user.name:-unknown}}",
      "deploy.at": "{{bundlebee.deploytime:-unset}}"
    },
    "annotations": {
      "io.yupiik.bundlebee/putOnUpdate": "true"
    }
  },
  "spec": {
    "selector": {
      "matchLabels": {
        "app.kubernetes.io/name": "{{bundlebee-lowercase:{{application.name}}}}"
      }
    },
    "template": {
      "metadata": {
        "labels": {
          "app.kubernetes.io/name": "{{bundlebee-lowercase:{{application.name}}}}",
          "deploy.by": "{{user.name:-unknown}}",
          "deploy.at": "{{bundlebee.deploytime:-unset}}",
          "bundlebee.environment": "{{bundlebee.environment}}"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "{{bundlebee-lowercase:{{application.name}}}}",
            "image": "{{application.image.name}}:{{{{application.name}}.image.version:-{{application.image.version}}}}",
            "imagePullPolicy": "{{application.image.pullPolicy:-IfNotPresent}}",
            "env": [
              {
                "name": "K8S_POD_NAME",
                "valueFrom": {
                  "fieldRef": {
                    "fieldPath": "metadata.name"
                  }
                }
              },
              {
                "name": "K8S_POD_NAMESPACE",
                "valueFrom": {
                  "fieldRef": {
                    "fieldPath": "metadata.namespace"
                  }
                }
              }
            ],
            "envFrom": [
              {
                "configMapRef": {
                  "name": "{{bundlebee-lowercase:{{application.name}}}}"
                }
              }
            ],
            "ports": [
              {
                "containerPort": {{application.containerPort:-8080}}
              }
            ],
            "resources": {
              "requests": {
                "memory": "{{{{application.name}}.resources.requests.memory:-{{application.resources.requests.memory:-128Mi}}}}",
                "cpu": "{{{{application.name}}.resources.requests.cpu:-{{application.resources.requests.cpu:-200m}}}}"
              },
              "limits": {
                "memory": "{{{{application.name}}.resources.limits.memory:-{{application.resources.limits.memory:-256Mi}}}}",
                "cpu": "{{{{application.name}}.resources.limits.cpu:-{{application.resources.limits.cpu:-1}}}}"
              }
            },
            "readinessProbe": {
              "initialDelaySeconds": 4,
              "periodSeconds": 4,
              "failureThreshold": 10,
              "httpGet": {
                "path": "{{{{application.name}}.probes.readiness.path:-{{application.probes.readiness.path:-/bundlebee/api/health/readiness}}}}",
                "port": {{{{application.name}}.probes.readiness.port:-{{application.probes.readiness.port:-8080}}}}
              }
            },
            "livenessProbe": {
              "initialDelaySeconds": 10,
              "periodSeconds": 30,
              "failureThreshold": 10,
              "timeoutSeconds": 30,
              "httpGet": {
                "path": "{{{{application.name}}.probes.liveness.path:-{{application.probes.liveness.path:-/bundlebee/api/health/liveness}}}}",
                "port": {{{{application.name}}.probes.liveness.port:-{{application.probes.liveness.port:-8080}}}}
              }
            }
          }
        ],
        "serviceAccountName": "{{{{application.name}}.account.name:-{{application.account.name:-default}}}}",
        "imagePullSecrets": [
          {
            "name": "{{{{application.name}}.image.pullSecret:-{{application.image.pullSecret:-null}}}}"
          }
        ]
      }
    },
    "replicas": {{{{application.name}}.replicas:-{{application.replicas:-1}}}}
  }
}
