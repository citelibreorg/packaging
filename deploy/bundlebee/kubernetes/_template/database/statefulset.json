{
  "apiVersion": "apps/v1",
  "kind": "StatefulSet",
  "metadata": {
    "name": "{{bundlebee-lowercase:{{database.name}}}}",
    "namespace": "{{namespace.name}}",
    "labels": {
      "app.kubernetes.io/name": "{{bundlebee-lowercase:{{database.name}}}}",
      "app.kubernetes.io/instance": "{{database.name}}",
      "app.kubernetes.io/version": "{{database.image.version}}",
      "app.kubernetes.io/component": "{{database.component}}",
      "app.kubernetes.io/part-of": "{{project.name}}",
      "app.kubernetes.io/managed-by": "bundlebee",
      "deploy.by": "{{user.name:-unknown}}",
      "deploy.at": "{{bundlebee.deploytime:-unset}}"
    },
    "annotations": {
      "io.yupiik.bundlebee/putOnUpdate": "true"
    }
  },
  "spec": {
    "selector": {
      "matchLabels": {
        "app.kubernetes.io/name": "{{bundlebee-lowercase:{{database.name}}}}"
      }
    },
    "template": {
      "metadata": {
        "labels": {
          "app.kubernetes.io/name": "{{bundlebee-lowercase:{{database.name}}}}",
          "deploy.by": "{{user.name:-unknown}}",
          "deploy.at": "{{bundlebee.deploytime:-unset}}",
          "bundlebee.environment": "{{bundlebee.environment}}"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "{{bundlebee-lowercase:{{database.name}}}}",
            "image": "{{database.image.name}}:{{database.image.version}}",
            "imagePullPolicy": "{{database.image.pullPolicy:-IfNotPresent}}",
            "env": [
              {
                "name": "K8S_POD_NAME",
                "valueFrom": {
                  "fieldRef": {
                    "fieldPath": "metadata.name"
                  }
                }
              },
              {
                "name": "K8S_POD_NAMESPACE",
                "valueFrom": {
                  "fieldRef": {
                    "fieldPath": "metadata.namespace"
                  }
                }
              }
            ],
            "envFrom": [
              {
                "configMapRef": {
                  "name": "{{bundlebee-lowercase:{{database.name}}}}"
                }
              }
            ],
            "ports": [
              {
                "name": "{{bundlebee-lowercase:{{database.port.name:-dbport}}}}",
                "containerPort": {{database.port:-3306}}
              }
            ],
            "volumeMounts": [
              {
                "name": "pv-data",
                "mountPath": "{{database.volumeMount:-/var/lib/mysql}}"
              }
            ],
            "resources": {
              "requests": {
                "memory": "{{{{database.name}}.resources.requests.memory:-{{database.resources.requests.memory:-128Mi}}}}",
                "cpu": "{{{{database.name}}.resources.requests.cpu:-{{database.resources.requests.cpu:-200m}}}}"
              },
              "limits": {
                "memory": "{{{{database.name}}.resources.limits.memory:-{{database.resources.limits.memory:-256Mi}}}}",
                "cpu": "{{{{database.name}}.resources.limits.cpu:-{{database.resources.limits.cpu:-1}}}}"
              }
            }
          }
        ],
        "volumes": [
          {
            "name": "pv-data",
            "persistentVolumeClaim": {
              "claimName": "{{bundlebee-lowercase:{{database.name}}-claim}}"
            }
          }
        ],
        "serviceAccountName": "{{{{database.name}}.account.name:-{{database.account.name:-default}}}}",
        "imagePullSecrets": [
          {
            "name": "{{{{database.name}}.image.pullSecret:-{{database.image.pullSecret:-null}}}}"
          }
        ]
      }
    },
    "replicas": {{{{database.name}}.replicas:-{{database.replicas:-1}}}}
  }
}
